@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container mt-5">
    <h2 class="text-center">Iniciar Sesión</h2>
    <form asp-action="Login" method="post" class="mt-4">
        <div class="form-group">
            <label for="correo">Correo:</label>
            <input name="correo" class="form-control" type="email" placeholder="Ingresa tu correo" required />
        </div>
        <div class="form-group mt-3">
            <label for="clave">Clave:</label>
            <input name="clave" class="form-control" type="password" placeholder="Ingresa tu clave" required />
        </div>
        <button type="submit" class="btn btn-primary mt-4">Iniciar Sesión</button>
    </form>
    <div class="mt-3">
        <p>¿No tienes una cuenta? <a asp-action="Register" asp-controller="Auth">Regístrate aquí</a>.</p>
    </div>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</div>
