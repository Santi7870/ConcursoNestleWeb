@model ConcursoNestleWeb.Models.MostrarDatosViewModel

<h2>Lista de Bloqueos y Desbloqueos</h2>

<!-- Formulario de filtro -->
<form method="get" action="/Bloqueo/MostrarDatos">
    <div class="form-group">
        <label for="searchName">Filtrar por Nombre:</label>
        <input type="text" name="searchName" id="searchName" class="form-control" value="@Model.SearchName" placeholder="Ingrese nombre del estudiante" />
    </div>

    <div class="form-group">
        <label>Filtrar por Tipo:</label>
        <div>
            <label for="bloqueo" class="mr-2">
                <input type="radio" name="isBloqueo" value="true" @(Model.IsBloqueo == true ? "checked" : "") /> Bloqueo
            </label>
            <label for="desbloqueo">
                <input type="radio" name="isBloqueo" value="false" @(Model.IsBloqueo == false ? "checked" : "") /> Desbloqueo
            </label>
            <label for="todos">
                <input type="radio" name="isBloqueo" value="" @(Model.IsBloqueo == null ? "checked" : "") /> Todos
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Aplicar Filtro</button>
</form>

<!-- Mostrar los datos filtrados -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre del Estudiante</th>
            <th>Es Bloqueo</th>
            <th>Fecha y Hora</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Registros)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NombreEstudiante</td>
                <td>@(item.EsBloqueo ? "Bloqueo" : "Desbloqueo")</td>
                <td>@item.FechaHora</td>
            </tr>
        }
    </tbody>
</table>
